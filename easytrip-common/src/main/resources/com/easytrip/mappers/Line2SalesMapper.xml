			<if test="bean.playTime != null">
				 play_time = #{bean.playTime},
			</if>
			<if test="bean.sort != null">
				 sort = #{bean.sort},
			</if>
 		 </set>
 		 where line_id=#{lineId} and sales_id=#{salesId}
	</update>

	<!-- 根据LineIdAndSalesId删除-->
	<delete id="deleteByLineIdAndSalesId">
		delete from line_2_sales where line_id=#{lineId} and sales_id=#{salesId}
	</delete>

	<!-- 根据PrimaryKey获取对象-->
	<select id="selectByLineIdAndSalesId" resultMap="base_result_map" >
		select <include refid="base_column_list" /> from line_2_sales where line_id=#{lineId} and sales_id=#{salesId}
	</select>

	<select id="selectSalesIdStringListMap" resultMap="base_result_map">
		select line_id,sales_id ,play_time from line_2_sales where line_id in (<foreach collection="lineIdList" item="item" separator=",">(#{item})</foreach>) ;
	</select>
</mapper>