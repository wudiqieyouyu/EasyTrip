 		 </set>
 		 where region_id=#{regionId}
	</update>

	<!-- 根据RegionId删除-->
	<delete id="deleteByRegionId">
		delete from regions where region_id=#{regionId}
	</delete>

	<!-- 根据PrimaryKey获取对象-->
	<select id="selectByRegionId" resultMap="base_result_map" >
		select <include refid="base_column_list" /> from regions where region_id=#{regionId}
