			</if>
			<if test="bean.area != null">
				 area,
			</if>
			<if test="bean.currency != null">
				 currency,
			</if>
		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.regionId!=null">
