		</if>
		<if test="query.purchaseInfo != null and query.purchaseInfo!=''">
			 and  purchase_info = #{query.purchaseInfo}
		</if>
		<if test="query.features != null and query.features!=''">
			 and  features = #{query.features}
		</if>
	</sql>

	<!-- 通用查询条件列-->
	<sql id="query_condition">
		<where>
			<include refid="base_condition_filed" />
			<if test="query.regionIdFuzzy!= null  and query.regionIdFuzzy!=''">
				 and  region_id like concat('%', #{query.regionIdFuzzy}, '%')
			</if>
			<if test="query.salesNameFuzzy!= null  and query.salesNameFuzzy!=''">
				 and  sales_name like concat('%', #{query.salesNameFuzzy}, '%')
			</if>
			<if test="query.priceFuzzy!= null  and query.priceFuzzy!=''">
				 and  price like concat('%', #{query.priceFuzzy}, '%')
			</if>
			<if test="query.salesIds != null and query.salesIds.length>0">
				and sales_id in(<foreach collection="query.salesIds" separator="," item="item">#{item}</foreach>)
			</if>
			<if test="query.salesDescFuzzy!= null  and query.salesDescFuzzy!=''">
				 and  sales_desc like concat('%', #{query.salesDescFuzzy}, '%')
			</if>
			<if test="query.imgCoverFuzzy!= null  and query.imgCoverFuzzy!=''">
				 and  img_cover like concat('%', #{query.imgCoverFuzzy}, '%')
			</if>
			<if test="query.createTimeStart!= null and query.createTimeStart!=''">
				 <![CDATA[ and  create_time>=str_to_date(#{query.createTimeStart}, '%Y-%m-%d') ]]>
			</if>
			<if test="query.createTimeEnd!= null and query.createTimeEnd!=''">
				 <![CDATA[ and  create_time< date_sub(str_to_date(#{query.createTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
			</if>
			<if test="query.salesAddressFuzzy!= null  and query.salesAddressFuzzy!=''">
				 and  sales_address like concat('%', #{query.salesAddressFuzzy}, '%')
			</if>
			<if test="query.openTimeFuzzy!= null  and query.openTimeFuzzy!=''">
				 and  open_time like concat('%', #{query.openTimeFuzzy}, '%')
			</if>
			<if test="query.telFuzzy!= null  and query.telFuzzy!=''">
				 and  tel like concat('%', #{query.telFuzzy}, '%')
			</if>
			<if test="query.cotentFuzzy!= null  and query.cotentFuzzy!=''">
				 and  cotent like concat('%', #{query.cotentFuzzy}, '%')
			</if>
			<if test="query.purchaseInfoFuzzy!= null  and query.purchaseInfoFuzzy!=''">
				 and  purchase_info like concat('%', #{query.purchaseInfoFuzzy}, '%')
			</if>
			<if test="query.featuresFuzzy!= null  and query.featuresFuzzy!=''">
				 and  features like concat('%', #{query.featuresFuzzy}, '%')
			</if>
			<if test="query.minPrice != null and query.minPrice!=''">
				<![CDATA[and  price >= #{query.minPrice} ]]>
			</if>
			<if test="query.maxPrice != null and query.maxPrice!=''">
				<![CDATA[and  price < #{query.maxPrice} ]]>
			</if>
		</where>
	</sql>

