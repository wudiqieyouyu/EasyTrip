		</if>
		<if test="query.salesDesc != null and query.salesDesc!=''">
			 and  sales_desc = #{query.salesDesc}
		</if>
		<if test="query.imgCover != null and query.imgCover!=''">
			 and  img_cover = #{query.imgCover}
		</if>
		<if test="query.salesLevel != null">
			 and  sales_level = #{query.salesLevel}
		</if>
		<if test="query.createTime != null and query.createTime!=''">
			 <![CDATA[ and  create_time=str_to_date(#{query.createTime}, '%Y-%m-%d') ]]>
		</if>
		<if test="query.salesAddress != null and query.salesAddress!=''">
			 and  sales_address = #{query.salesAddress}
		</if>
		<if test="query.openTime != null and query.openTime!=''">
